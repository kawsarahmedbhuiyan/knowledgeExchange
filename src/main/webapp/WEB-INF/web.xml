<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authCheckFilter</filter-name>
        <filter-class>net.therap.knowledgeExchange.filter.AuthCheckFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authCheckFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>cacheClearFilter</filter-name>
        <filter-class>net.therap.knowledgeExchange.filter.CacheClearFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>cacheClearFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>